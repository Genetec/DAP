<UserControl
    x:Class="Genetec.Dap.CodeSamples.MapControlSampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="clr-namespace:Genetec.Sdk.Controls;assembly=Genetec.Sdk.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ContentPresenter
            Grid.Column="0"
            Margin="10"
            Content="{Binding MapControl}" />

        <GroupBox
            Grid.Column="1"
            Margin="10"
            Header="Map Properties">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Margin="0,5"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding AvailableMaps}"
                    SelectedItem="{Binding SelectedMap}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <CheckBox
                    Grid.Row="1"
                    Margin="0,5"
                    Content="Zoom Control Visible"
                    IsChecked="{Binding IsZoomControlVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox
                    Grid.Row="2"
                    Margin="0,5"
                    Content="Navigation Control Visible"
                    IsChecked="{Binding IsNavigationControlVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox
                    Grid.Row="3"
                    Margin="0,5"
                    Content="Presets Control Visible"
                    IsChecked="{Binding IsPresetsControlVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox
                    Grid.Row="4"
                    Margin="0,5"
                    Content="Send To Tiles Control Visible"
                    IsChecked="{Binding IsSendToTilesControlVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox
                    Grid.Row="5"
                    Margin="0,5"
                    Content="Smart Click Control Visible"
                    IsChecked="{Binding IsSmartClickControlVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>